# Main Config
server {
    server_name _;
    listen 80;
    listen 443 default_server ssl;
    ssl_certificate /home/vagrant/localhost.crt;
    ssl_certificate_key /home/vagrant/localhost.key;

    root /stack/website/public;

    #
    # Common nginx configuration all sites use
    # Based on: Symfony 4
    #

    sendfile off;
    client_max_body_size 200M;

    location /ping {
        return 200 'online';
        add_header Content-Type text/plain;
    }

    location / {
        # try to serve file directly, fallback to index.php
        try_files $uri /index.php$is_args$args;
    }

    location ~ ^/index\.php(/|$) {
        fastcgi_pass unix:/var/run/php/php7.4-fpm.sock;
        fastcgi_split_path_info ^(.+\.php)(/.*)$;
        include fastcgi_params;
        fastcgi_param SCRIPT_FILENAME $realpath_root$fastcgi_script_name;
        fastcgi_param DOCUMENT_ROOT $realpath_root;
        fastcgi_buffer_size 128k;
        fastcgi_buffers 4 256k;
        fastcgi_busy_buffers_size 256k;
        internal;
    }

    location ~ \.php$ {
        return 404;
    }
}

# MySQL Adminer
server
{
    server_name mysql.local;
    listen 80;

    root /stack/adminer/;
    index adminer.php;

    sendfile off;
    client_max_body_size 200M;

    # Normal directory
    location / {
        try_files $uri $uri/ /adminer.php$is_args$args;
    }

    # PHP Specifics
    location ~ \.php$ {
        fastcgi_pass unix:/var/run/php/php7.4-fpm.sock;
        fastcgi_split_path_info ^(.+\.php)(/.*)$;
        include fastcgi_params;
        fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
        fastcgi_param HTTPS off;
        fastcgi_read_timeout 600;
    }
}
